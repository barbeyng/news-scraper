<div class="row">
  {{#each articles}}
  <div class="col-lg-4 pb-4 d-flex justify-content-center align-items-stretch">
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="{{image}}" alt="{{title}}">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{summary}}</p>
        <hr>
        <div class="text-center">
          <a href="{{link}}" target="blank">
            <button type="button" class="btn btn-outline-secondary">Full article</button>
          </a>
          <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#commentModal" data-id="{{_id}}"
            id="comment-button">Comment</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<!-- Modal -->
<div class="modal fade bd-example-modal-lg" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="commentModalLabel">View comments or add one of your own</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <!-- to be populated with ajax request -->
      <div class="modal-body" id="notes">
        <div id="bodyinput">
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>