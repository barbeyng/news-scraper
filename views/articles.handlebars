<div class="main-banner">
	<h1 class="main-title">EDM Headlines Scraper</h1>
</div>
<nav>
	<a href="/scrape">Scrape EDM Articles</a>
</nav>
<div class="all-articles">
	{{#each articles}}
	<div class="article-element">
		<h4 class="article-title">{{title}}</h4>
		<p class="article-summary">{{summary}}</p>
		<a class="link" href="{{link}}" target="_blank">Link to article</a>
		<a class="link comment-link" href="">Add a comment</a>
		<div class="all-comments" id="{{_id}}">
			{{#each ../comments}}
			<div class="comment">
				<p class="comment-body">{{body}}</p>
				<p class="comment-time">{{time}}</p>
				<p class="comment-user">{{user}}</p>
			</div>
			{{/each}}
		</div>
	</div>
	{{/each}}
</div>