<div class="row">
  {{#each articles}}
  <div class="col-lg-4 pb-4 d-flex justify-content-center align-items-stretch">
    <div class="card border-dark" style="width: 20rem;">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <hr>
        <div class="text-center">
          <a href="{{link}}" target="blank">
            <button type="button" class="btn btn-outline-secondary">Full article</button>
          </a>
            <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#commentModal" data-id="{{_id}}" id="comment-button">Comment</button>
        </div>
      </div>
    </div>
  </div>
  {{/each}}
</div>

<!-- Modal -->
<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="commentModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="notes">
        <!-- to be populated with ajax call -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>